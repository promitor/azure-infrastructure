on:
  push:
    branches:
      - main
  pull_request:
    paths:
    - '.github/workflows/ci.yml'
    - 'deploy/**'
  
name: CI
jobs:
  us:
    name: US
    runs-on: ubuntu-latest
    steps:
      # Checkout code
    - uses: actions/checkout@main

      # Lint Bicep file
    - name: Bicep Build
      uses: Azure/bicep-build-action@v1.0.0
      with:
        bicepFilePath: ./deploy/us.bicep
  europe:
    name: Europe
    runs-on: ubuntu-latest
    steps:
      # Checkout code
    - uses: actions/checkout@main

      # Lint Bicep file
    - name: Bicep Build
      uses: Azure/bicep-build-action@v1.0.0
      with:
        bicepFilePath: ./deploy/europe.bicep